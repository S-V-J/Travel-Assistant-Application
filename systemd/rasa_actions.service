[Unit]
Description=Rasa Action Server for Travel Voice Assistant
After=network.target

[Service]
User=stjl0
Group=stjl0
WorkingDirectory=/home/stjl0/livekit-travel-voice-assistant/rasa-bot
Environment="PATH=/home/stjl0/livekit-travel-voice-assistant/rasa-bot/rasa_venv/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/snap/bin"
ExecStart=/home/stjl0/livekit-travel-voice-assistant/rasa-bot/rasa_venv/bin/rasa run actions -p 5055
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
