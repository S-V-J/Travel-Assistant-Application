[Unit]
Description=Rasa Server for Travel Voice Assistant
After=network.target

[Service]
User=stjl0
Group=stjl0
WorkingDirectory=/home/stjl0/livekit-travel-voice-assistant/rasa-bot
Environment="PATH=/home/stjl0/livekit-travel-voice-assistant/rasa-bot/rasa_venv/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/snap/bin"
Environment="SQLALCHEMY_SILENCE_UBER_WARNING=1"
ExecStartPre=/bin/sleep 5
ExecStart=/home/stjl0/livekit-travel-voice-assistant/rasa-bot/rasa_venv/bin/rasa run --enable-api -p 5005
Restart=always
RestartSec=15

[Install]
WantedBy=multi-user.target
